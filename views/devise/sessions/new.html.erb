<div id="full-orange">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading">Iniciar Sesión</div>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
      <div class="col-md-12 col-lg-12">
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.text_field :login, autofocus: true, placeholder: "Usuario", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", :class => "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", :class=> "btn btn-xl btn-inverse" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %> 

      </div>
  </div>
</div>