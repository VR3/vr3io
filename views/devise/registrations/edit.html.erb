<div id="full-blue">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading">Editar Perfil </div>
      <h4><%= current_user.username %> | <%= current_user.email %></h4>
    </div>
  </div>
</div>

</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label "Usuario" %><br />
          <%= f.text_field :username, autofocus: true, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Correo Electrónico" %><br />
          <%= f.email_field :email, :class => "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Esperando confirmacion de: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label "Contraseña" %> <i>(deja en blanco si no quieres cambiar)</i><br />
          <%= f.password_field :password, autocomplete: "off" , :class => "form-control"%>
          <% if @minimum_password_length %>
            <br />
            <em>minimo <%= @minimum_password_length %> caractéres</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label "Confirmar Contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Contraseña Actual" %> <i>(Necesitamos tu contraseña actual para hacer los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", :class => "form-control"%>
        </div>

        <div class="actions">
          <%= f.submit "Actualizar", :class=>"btn btn-xl btn-inverse" %>
        </div>
      <% end %>
      <br>
      <p><%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Segur@?" }, method: :delete%></p>

      <!--%= link_to "Atrás", :back, :class=>"btn btn-info" %-->
    </div>
  </div>
</div>
