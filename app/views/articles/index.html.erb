<div id="full-blue">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading"><%= @article.title %></div>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row text-center">
    <h3>Articulos</h3>
    <div class="row">
      <% @articles.each do |a| %>
        <div class="col-sm-3 col-md-3">
          <div class="thumbnail">
            <%= link_to a.link do %>
              <%= image_tag a.logo.url, :class => "img-responsive"%>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>