<div id="full-blue">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading"><%= @article.title %></div>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row text-center">
    <h3>Articulos</h3>
      <% @articles.each do |a| %>
        <%= link_to article_path(a.id) do %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag a.image_url, :class => "img-responsive"%>
              <div class="caption">
                <h3><u><%= a.title %></u></h3>
                <h4><%= a.source %></h4>
                <h5><%= a.link %></h5>
                <h5><%= a.created_at %></h5>
                <p><%= a.body.truncate(90) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>