<div id="projectspage"></div>

<div id="full-yellow">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading">Proyectos</div>
    </div>
  </div>
</div>
<div class="row">
    <div class="container">
        <% @projects.each do |p| %>
            <%= link_to project_path(p) do %>
            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                    <% if p.image.url %>
                        <%= image_tag p.image.url %>        
                    <% else %>
                        <%= image_tag "http://static.vr3.io/vr3/img/projects/#{p.client}/cover.png", :class => "img-responsive"%>
                    <% end %>
                    <div class="caption">
                        <h3><u><%= p.title %></u></h3>
                        <% if p.client %>
                            <small class="text-muted">Cliente</small>
                            <h4><%= p.client %></h4>
                        <% end %>
                        <% if p.provider %>
                            <small class="text-muted">Agencia</small>
                            <h5><%= p.provider %></h5>
                        <% end %>
                        <% if p.date %>
                            <h5><%= p.date %></h5>
                        <% end %>
                        <p><%= markdown(p.description.truncate(90))%></p>
                    </div>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>
</div>
<br/>
