<div id="projectspage"></div>

<!-- Portfolio Section -->
<section id="projects">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Proyectos</h2>
        <!--h3 class="section-subheading normal-text">Lo que hicimos y lo que nos gust√≥.</h3-->
      </div>
    </div>
    </br>

    <div class="row">
      <% @projects.each do |p| %>
        <%= link_to project_path(p.id) do %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag "http://vectorthree.com/vr3/img/projects/#{p.client}/cover.png", :class => "img-responsive"%>
              <!--img class="img-responsive" src="http://placehold.it/350x250" alt="Google"-->
              <div class="caption">
                <h3><u><%= p.title %></u></h3>
                <h4>Cliente: <%= p.client %></h4>
                <h5>Agencia: <%= p.provider %></h5>
                <h5><%= p.date %></h5>
                <p><%= p.description.truncate(90) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <br/>
  </div>
</section>