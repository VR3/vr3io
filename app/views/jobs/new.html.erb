<div id="full-blue">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading">Carrera en <%= link_to("VR3", root_path) %></div>
    </div>
  </div>
</div>
<section>
  <div class="container">
    <div class="row text-center">
      <div class="col-sm-12">
        <h1>Nueva Vacante</h1> 
        <p>Intenta llenar todos los campos de la posición.</p>
        <%= form_for @job do |p| %>
        
          <div class="form-group">
            <%= p.text_field :position, autofocus: true, :class => "form-control validate", :placeholder => "Posición"%>
          </div>

          <div class="form-group">
            <%= p.text_field :location, autofocus: true, :class => "form-control validate", :placeholder => "Ubicación"%>
          </div>

          <div class="form-group">
            <%= select_tag :department, options_for_select([['Departamento', 'departmento'], ['Desarrollo', 'desarrollo'], ['Finanzas', 'finanzas'], ['Administración', 'administracion'], ['Soporte', 'soporte']], 'departamento'), :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= select_tag :commitment, options_for_select([['Tipo de Trabajo', 'tipo'], ['Tiempo Completo', 'completo'], ['Medio Tiempo', 'medio'], ['Remoto', 'remoto'], ['Consultoría', 'consultor']], 'tipo'), :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= p.text_field :salary, autofocus: true, :class => "form-control validate", :placeholder => "Salario"%>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">Descripción (Usa <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a>)</span>
              <%= p.text_area :overview, autofocus: true, :class => "form-control validate", :placeholder => "Descripción", rows: 5, cols: 10 %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">Responsabilidades (Usa <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a>)</span>
              <%= p.text_area :responsabilities, autofocus: true, :class => "form-control validate", :placeholder => "Responsabilidades", rows: 5, cols: 10 %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">Cualidades (Usa <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a>)</span>
              <%= p.text_area :qualifications, autofocus: true, :class => "form-control validate", :placeholder => "Cualidades Deseables", rows: 5, cols: 10 %>
            </div>
          </div>

          <%= link_to("Cancelar", jobs_path , class: "btn btn-lg btn-danger") %>
          <button class="btn btn-lg btn-primary float-right" type="submit" name="action">Crear Vacante</button>
        <% end %>
      </div>
    </div>
  </div>
</section>